{
  "name": "setback-card-game",
  "version": "0.0.2",
  "description": "A multiplayer Setback card game built with Phaser 3 and TypeScript",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome check src/ && tsc --noEmit",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "download-cards": "./download-cards.sh"
  },
  "keywords": [
    "phaser",
    "typescript",
    "card-game",
    "setback",
    "multiplayer"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "events": "^3.3.0",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/events": "^3.0.3",
    "@types/node": "^24.1.0",
    "@types/offscreencanvas": "^2019.7.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  }
}
